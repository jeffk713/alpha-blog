<h2>Alpha Bloggers:</h2>

<div>
  <% @users.each do |user| %>
    <div>
      <h3><%= link_to user.username, user_path(user) %></h3>
    </div>
    <div class="user-box">
      <div class="user-image">
        <%= link_to gravatar_for(user,size: 150), user_path(user) %>
      </div>
      <div class="user-info">
        <div>
          <p><%= pluralize(user.articles.count, "article")%> posted</p>
        </div>
        <div>
          <%= link_to 'View Profile', user_path(user)%> |
          <%= link_to 'Edit Profile', edit_user_path(user)%>
        </div>
        <div>
          <small>Joined <%= time_ago_in_words(user.created_at)%> ago</small>
        </div>
      </div>
    </div>
  <% end %>
</div>
