<h1>Create a new article</h1>


<% if @article.errors.any? %>
  <h3>Following error occured: </h3>
  <ul>
    <% @article.errors.full_messages.each do |msg| %>
      <li>
        <%= msg %>
      </li>
    <% end %>
  </ul>
<% end %>

<%# form helper  %>
<%= form_with scope: :article, url: articles_path, local: true do |f| %>

  <p>
    <%= f.label :title %>
    <br/>
    <%= f.text_field :title %>
  </p>

  <p>
    <%= f.label :description %>
    <br/>
    <%= f.text_area :description %>
  </p>

  <p>
    <%= f.submit %>
  </p>

<% end %>