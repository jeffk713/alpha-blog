<div>
  <% obj.each do |article| %>
    <div class="article-container">
      <div>
        <strong>
          <%= article.title%>
        </strong>
      </div>
      <div>
        <p>
          <%= article.description%>
        </p>
      </div>
      <% if purpose == 'index' %>
        <div>
          <span>
            by <%= link_to article.user.username, user_path(article.user) %>
          </span>
        </div>
      <% end %>
      <%= link_to 'View', article_path(article)%> |
      <%= link_to 'Edit', edit_article_path(article)%> |
      <%= link_to 'Delete', 
        article_path(article), 
        method: :delete, 
        data: { confirm: "Would you like to delete?"} 
      %>
    </div>
  <% end %>
</div>
