<h1>Edit an article</h1>

<% if @article.errors.any? %>
  <h3>Following error occured: </h3>
  <ul>
    <% @article.errors.full_messages.each do |msg| %>
      <li>
        <%= msg %>
      </li>
    <% end %>
  </ul>
<% end %>

<%# form helper  %>
<%= form_with(model: @article, local: true) do |f| %>

  <p>
    <%= f.label :title %>
    <br/>
    <%= f.text_field :title %>
  </p>

  <p>
    <%= f.label :description %>
    <br/>
    <%= f.text_area :description %>
  </p>

  <p>
    <%= f.submit %>
  </p>

<% end %>

<%= link_to 'Return to listing', articles_path %>  